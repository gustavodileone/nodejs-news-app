<nav id="sidenav" class="bg-dark shadow">
    <button class="sidenav-close bg-transparent border-0 text-white" type="button" onclick="toggleSideNav()">
        x
    </button>

    <ul>
        <li>
            <a class="text-white" href="/">
                Home
            </a>
        </li>
        <% if(sessionUser) { %>
            <li class="mt-2">
                <button class="text-white me-4 bg-transparent border-0 px-0" type="button" data-bs-toggle="collapse" data-bs-target="#user-settings" aria-expanded="false" aria-controls="user-settings">
                    <%= sessionUser.username %>
                </button>
                <div class="collapse" id="user-settings">
                    <ul class="list-unstyled ps-4 mt-2">
                        <li>
                            <a class="text-white" href="/user/<%= sessionUser.slug %>">
                                My profile
                            </a>
                        </li>
                        <li class="my-2">
                            <a class="text-white" href="/user/edit/<%= sessionUser.slug %>">
                                Edit my profile
                            </a>
                        </li>
                        <li>
                            <a class="text-white" href="/user/edit-password/<%= sessionUser.slug %>">
                                Change my password
                            </a>
                        </li>
                        <li class="my-2">
                            <a class="text-danger" href="/user/delete-user/<%= sessionUser.slug %>">
                                Delete my account
                            </a>
                        </li>
                    </ul>
                </div>
            </li>
            <li class="my-2">
                <a href="/news/create" class="text-success me-4">
                    Create a news
                </a>
            </li>
            <li>
                <form action="/logout" method="POST">
                    <button class="px-0 bg-transparent border-0 text-danger">Logout</button>
                </form>
            </li>
        <% } else { %>
            <li class="my-2">
                <a href="/register" class="text-white">Sign up</a>
            </li>
            <li>
                <a href="/login" class="text-success">Login</a>
            </li>
        <% } %>
    </ul>
</nav>